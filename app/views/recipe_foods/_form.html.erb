<%= form_with(model: RecipeFood.new, local:true) do |f| %>
<div class="container">
  <div class="form-group">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity, class:"form-control", placeholder: "Quantity" %>
  </div>

  <div class="form-group">
    <%= f.label :food_id %><br />
    <%= f.text_field :food_id, class:"form-control" , placeholder: "Food-id"%>
  </div>

  <div class="form-group">
    <%= f.label :recipe_id %><br />
    <%= f.text_field :recipe_id, class:"form-control", placeholder: "Recipe-id" %>
  </div>

  <div class="submit-button">
    <%= f.submit class: "btn btn-outline-dark btn-lg" %>
  </div>
</div>
<% end %>