<%= form_with(model: @food, local:true) do |f| %>
<div class="container">
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control",placeholder: "Please Enter a Food Name" %>
  </div>

  <div class="form-group">
    <%= f.label :measurement_unit %><br />
    <%= f.text_field :measurement_unit, class:"form-control",placeholder: "Kg  or g or L" %>
  </div>

  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.text_field :price, class:"form-control", placeholder: "Please Enter a Number" %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity, class:"form-control",placeholder: "Please Enter a Number" %>
  </div>

  <div class="submit-button">
    <%= f.submit class: "btn btn-outline-dark btn-lg" %>
  </div>
</div>
<% end %>